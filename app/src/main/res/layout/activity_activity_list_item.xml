<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="18dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_3a"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/id_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/location"
                android:drawablePadding="3dp"
                android:textColor="@color/text_8"
                android:textSize="@dimen/text_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/time_gray"
                    android:drawablePadding="3dp"
                    android:textColor="@color/text_8"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/id_browsing_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/browsing"
                    android:drawablePadding="3dp"
                    android:textColor="@color/text_8"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/id_collect_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/collect_gray"
                    android:drawablePadding="3dp"
                    android:textColor="@color/text_8"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="2px"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:background="#CCCCCC " />

        <TextView
            android:id="@+id/id_apply_number"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:textColor="#FF746F6E"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <View style="@style/HorizontalHalvingLine_1" />
</RelativeLayout>