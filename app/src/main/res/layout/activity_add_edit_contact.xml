<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white_f1f2f6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:text="头像"
            android:textColor="#FF444444"
            android:textSize="@dimen/text_size_17" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/default_icon"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white_f1f2f6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="#FF444444"
            android:textSize="@dimen/text_size_17" />

        <EditText
            android:id="@+id/id_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:background="@null"
            android:hint="请输入姓名"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="#FF444444"
            android:textColorHint="#FFC0C0C0"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <View
        style="@style/HorizontalHalvingLine_1"
        android:layout_marginLeft="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/id_account_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textColor="#FF444444"
            android:textSize="@dimen/text_size_17" />

        <EditText
            android:id="@+id/id_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:background="@null"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#FF444444"
            android:textColorHint="#FFC0C0C0"
            android:maxLength="11"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <View
        style="@style/HorizontalHalvingLine_1"
        android:layout_marginLeft="18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/id_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#54B1F8"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/text_size_17" />
</LinearLayout>