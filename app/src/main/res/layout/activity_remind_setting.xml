<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阿司匹林"
                android:textColor="#FF444444"
                android:textSize="17sp" />

            <TextView
                android:layout_width="45dp"
                android:layout_height="19dp"
                android:layout_alignBottom="@id/tv_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_name"
                android:background="@drawable/shape_rectangle_54b1f8"
                android:gravity="center"
                android:text="每天"
                android:textColor="#FF54B1F8"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="5dp"
                android:text="07:56"
                android:textColor="#FF999999"
                android:textSize="15sp" />

        </RelativeLayout>


        <com.suke.widget.SwitchButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_checked_color="#54B1F8"
            app:sb_show_indicator="false" />
    </RelativeLayout>

    <View style="@style/horizontallLine_e7" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阿司匹林"
                android:textColor="#FF444444"
                android:textSize="17sp" />

            <TextView
                android:layout_width="45dp"
                android:layout_height="19dp"
                android:layout_alignBottom="@id/tv_name2"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_name2"
                android:background="@drawable/shape_rectangle_54b1f8"
                android:gravity="center"
                android:text="每天"
                android:textColor="#FF54B1F8"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name2"
                android:layout_marginTop="5dp"
                android:text="07:56"
                android:textColor="#FF999999"
                android:textSize="15sp" />

        </RelativeLayout>


        <com.suke.widget.SwitchButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_checked_color="#54B1F8"
            app:sb_show_indicator="false" />
    </RelativeLayout>

    <View style="@style/horizontallLine_e7" />
</LinearLayout>