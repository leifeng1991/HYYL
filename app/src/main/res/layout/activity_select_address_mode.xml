<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <View style="@style/HorizontalHalvingLine_1" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#FF4A90E2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="请选择就餐方式"
                    android:textColor="@color/text_8"
                    android:textSize="@dimen/text_size_17" />
            </LinearLayout>

            <View style="@style/HorizontalHalvingLine_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:id="@+id/id_home_delivery_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_home_delivery" />

                    <com.xxzlkj.huayiyanglao.weight.ShapeButton
                        android:id="@+id/id_home_delivery"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        app:fb_borderColor="#FF54B1F8"
                        app:fb_borderWidth="1dp"
                        app:fb_defaultColor="#FF54B1F8"
                        app:fb_radius="18dp"
                        app:fb_text="外卖到家"
                        app:fb_textColor="@color/white"
                        app:fb_textSize="@dimen/text_size_20" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/id_reach_store_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_reach_store" />

                    <com.xxzlkj.huayiyanglao.weight.ShapeButton
                        android:id="@+id/id_reach_store"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        app:fb_borderColor="#979797"
                        app:fb_borderWidth="1dp"
                        app:fb_defaultColor="@color/white"
                        app:fb_radius="18dp"
                        app:fb_text="到店食用"
                        app:fb_textColor="@color/text_4"
                        app:fb_textSize="@dimen/text_size_20" />
                </LinearLayout>

            </LinearLayout>

            <View style="@style/HorizontalHalvingLine_5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#FF4B4E" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="定位地址"
                    android:textColor="@color/text_8"
                    android:textSize="@dimen/text_size_17" />
            </LinearLayout>

            <View style="@style/HorizontalHalvingLine_1" />

            <LinearLayout
                android:id="@+id/id_location_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/id_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="北京市朝阳区朝阳门北大街18号中
国人保寿险大厦"
                    android:textColor="@color/text_4"
                    android:textSize="@dimen/text_size_17" />

                <View
                    style="@style/VerticalHalvingLine_1"
                    android:layout_marginLeft="5dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:src="@mipmap/ic_address_administration" />
            </LinearLayout>

            <View style="@style/HorizontalHalvingLine_5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#688EFB" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="附近食堂"
                    android:textColor="@color/text_8"
                    android:textSize="@dimen/text_size_17" />
            </LinearLayout>

            <View style="@style/HorizontalHalvingLine_1" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/id_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/id_order_meal"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#FF54B1F8"
        android:text="去点餐"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_17" />
</LinearLayout>
