<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_subscribe_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <View style="@style/horizontallLine" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/id_tip"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@color/orange_FFEDD4"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textColor="@color/orange_ff725c"
                android:textSize="14sp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/id_subscribe_address_layout"
                style="@style/subscribeLl">

                <TextView
                    android:id="@+id/id_subscribe_tip_1"
                    style="@style/subscribeLeftTv"
                    android:text="服务地址" />

                <TextView
                    android:id="@+id/id_subscribe_address"
                    style="@style/subscribeCenterTv"
                    android:hint="请输入详情地址" />

                <ImageView style="@style/subscribeRightIv" />
            </LinearLayout>

            <View style="@style/subscribeLine" />


            <LinearLayout
                android:id="@+id/id_layout"
                style="@style/subscribeLl">

                <TextView
                    android:id="@+id/id_subscribe_tip_3"
                    style="@style/subscribeLeftTv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:singleLine="true" />

                <TextView
                    style="@style/subscribeCenterTv"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/id_subscribe_unit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_price"
                    android:textSize="@dimen/text_size_15" />

                <ImageView
                    android:id="@+id/id_right_arrow"
                    style="@style/subscribeRightIv"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone" />
            </LinearLayout>

            <View style="@style/subscribeLine" />

            <LinearLayout style="@style/subscribeLl">

                <TextView
                    android:id="@+id/id_subscribe_tip_4"
                    style="@style/subscribeLeftTv"
                    android:text="服务数量"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/id_subscribe_reduce"
                        android:layout_width="28dp"
                        android:layout_height="match_parent"
                        android:paddingRight="5dp"
                        android:src="@mipmap/sc_reduce" />

                    <TextView
                        android:id="@+id/id_subscribe_number"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/text_56"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_12" />

                    <ImageView
                        android:id="@+id/id_subscribe_add"
                        android:layout_width="28dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:src="@mipmap/sc_add" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_service_frequency_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View style="@style/subscribeLine" />

                <LinearLayout
                    style="@style/subscribeLl">

                    <TextView
                        android:id="@+id/id_service_frequency_tip"
                        style="@style/subscribeLeftTv"
                        android:text="服务频次" />

                    <TextView
                        android:id="@+id/id_service_frequency_time"
                        style="@style/subscribeCenterTv"
                        android:hint="请选择服务频次" />

                    <ImageView style="@style/subscribeRightIv" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_service_cycle_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View style="@style/subscribeLine" />

                <LinearLayout
                    style="@style/subscribeLl">

                    <TextView
                        android:id="@+id/id_service_cycle_tip"
                        style="@style/subscribeLeftTv"
                        android:text="服务周期" />

                    <TextView
                        android:id="@+id/id_service_cycle_time"
                        style="@style/subscribeCenterTv"
                        android:hint="请选择服务周期" />

                    <ImageView style="@style/subscribeRightIv" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line_5dp" />

            <LinearLayout
                android:id="@+id/id_subscribe_time_layout"
                style="@style/subscribeLl">

                <TextView
                    android:id="@+id/id_subscribe_time_tip"
                    style="@style/subscribeLeftTv"
                    android:text="服务时间" />

                <TextView
                    android:id="@+id/id_subscribe_time_time"
                    style="@style/subscribeCenterTv"
                    android:hint="请输入服务时间" />

                <ImageView style="@style/subscribeRightIv" />
            </LinearLayout>

            <View style="@style/subscribeLine" />

            <LinearLayout style="@style/subscribeLl">

                <TextView
                    android:id="@+id/id_subscribe_tip_5"
                    style="@style/subscribeLeftTv"
                    android:text="小计" />

                <TextView
                    style="@style/subscribeCenterTv"
                    android:layout_width="0dp" />

                <TextView
                    android:id="@+id/id_subscribe_subtotal_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_price"
                    android:textSize="@dimen/text_size_20" />
            </LinearLayout>

            <View style="@style/subscribeLine" />

            <LinearLayout style="@style/subscribeLl">

                <TextView
                    android:id="@+id/id_subscribe_tip_6"
                    style="@style/subscribeLeftTv"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="备注" />

                <EditText
                    android:id="@+id/id_subscribe_note"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/id_as_sm_tip"
                    android:layout_weight="1"
                    android:background="@drawable/shape_gray_radius"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="top"
                    android:hint="最多不超过一百字..."
                    android:maxLength="100"
                    android:minHeight="71dp"
                    android:padding="15dp"
                    android:textColor="@color/text_c3"
                    android:textColorHint="@color/text_c3"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <View style="@style/line_5dp"
                android:visibility="gone"/>

            <LinearLayout style="@style/subscribeLl"
                android:visibility="gone">

                <TextView
                    android:id="@+id/id_subscribe_tip_7"
                    style="@style/subscribeLeftTv"
                    android:text="联系电话" />

                <TextView
                    style="@style/subscribeCenterTv"
                    android:layout_width="0dp" />

                <TextView
                    android:id="@+id/id_subscribe_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_71"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <View style="@style/line_5dp" />

            <LinearLayout style="@style/subscribeLl">

                <TextView
                    android:id="@+id/id_subscribe_tip_9"
                    style="@style/subscribeLeftTv"
                    android:text="抵用券" />

                <TextView
                    android:id="@+id/id_subscribe_coupons"
                    style="@style/subscribeCenterTv"
                    android:layout_width="0dp"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="无可用优惠" />

                <ImageView style="@style/subscribeRightIv" />
            </LinearLayout>

            <View style="@style/subscribeLine" />

            <LinearLayout style="@style/subscribeLl">

                <TextView
                    android:id="@+id/id_subscribe_tip_8"
                    style="@style/subscribeLeftTv"
                    android:text="合计" />

                <TextView
                    style="@style/subscribeCenterTv"
                    android:layout_width="0dp" />

                <TextView
                    android:id="@+id/id_subscribe_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_price"
                    android:textSize="@dimen/text_size_20" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/id_gd_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/backgroud_f2"
        android:paddingLeft="20dp">

        <com.xxzlkj.shop.weight.CustomButton
            android:id="@+id/id_subscribe_buy_now"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            app:fb_defaultColor="@color/text_price"
            app:fb_textSize="@dimen/text_size_12"
            app:fb_text="立即支付"
            app:fb_textColor="@color/white"
            app:fb_radius="45dp"/>

        <TextView
            android:id="@+id/id_subscribe_order"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@id/id_subscribe_buy_now"
            android:background="@drawable/shape_orange"
            android:gravity="center"
            android:text="生成订单"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
