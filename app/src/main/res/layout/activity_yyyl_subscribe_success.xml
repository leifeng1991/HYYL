<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <View style="@style/horizontallLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_gradient_order"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="24dp">

        <com.xxzlkj.huayiyanglao.weight.ShapeButton
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:gravity="center"
            app:fb_borderColor="@color/white"
            app:fb_borderWidth="1dp"
            app:fb_defaultColor="@color/transparent"
            app:fb_radius="17dp"
            app:fb_text="√"
            app:fb_textColor="@color/white"
            app:fb_textSize="12sp" />

        <TextView
            android:id="@+id/id_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="预约成功"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="23dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_pay_type_image"
            android:layout_width="22dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/id_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#FF606367"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_pay_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp"
        android:textColor="#FF606367"
        android:textSize="@dimen/text_size_17" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:background="#e4e4e4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/id_service_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF100015"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/id_subscribe_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#FF100015"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/id_service_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#FF100015"
            android:textSize="@dimen/text_size_17" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#e4e4e4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <com.xxzlkj.huayiyanglao.weight.ShapeButton
            android:id="@+id/id_back"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            app:fb_borderColor="#a1a1a1"
            app:fb_borderWidth="1dp"
            app:fb_defaultColor="@color/white"
            app:fb_radius="18dp"
            app:fb_text="返回"
            app:fb_textColor="#FFA1A1A1"
            app:fb_textSize="17sp" />

        <com.xxzlkj.huayiyanglao.weight.ShapeButton
            android:id="@+id/id_home"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            app:fb_borderColor="#54B1F8"
            app:fb_borderWidth="1dp"
            app:fb_defaultColor="@color/white"
            app:fb_radius="18dp"
            app:fb_text="首页"
            app:fb_textColor="#54B1F8"
            app:fb_textSize="17sp" />


    </LinearLayout>
</LinearLayout>

