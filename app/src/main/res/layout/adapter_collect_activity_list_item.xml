<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_cgli_image"
            android:layout_width="81dp"
            android:layout_height="81dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_cgli_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_3a"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/id_cgli_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/location"
                android:drawablePadding="4px"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_8"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_cgli_browsering_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/browsing"
                    android:drawablePadding="5dp"
                    android:textColor="@color/text_8"
                    android:textSize="12.5sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:id="@+id/id_cgli_comment"
                        android:layout_width="13dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/chat" />

                    <TextView
                        android:id="@+id/id_cgli_comment_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/id_cgli_comment"
                        android:textColor="@color/text_8"
                        android:textSize="12.5sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/id_cgli_collect_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/collect_gray"
                    android:drawablePadding="5dp"
                    android:textColor="@color/text_8"
                    android:textSize="12.5sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/horizontallLine"
        android:layout_marginLeft="16dp" />
</LinearLayout>
