<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/id_hai_default_line"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#54B1F8" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/id_hai_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:singleLine="true"
                android:textColor="@color/text_3a"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/id_hai_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/id_hai_name"
                android:singleLine="true"
                android:textColor="@color/text_3a"
                android:textSize="@dimen/text_size_14" />

            <com.xxzlkj.huayiyanglao.weight.ShapeButton
                android:id="@+id/id_hai_default_tip"
                android:layout_width="28dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/id_hai_phone"
                app:fb_defaultColor="#ff725c"
                android:gravity="center"
                app:fb_text="默认"
                app:fb_textColor="@color/white"
                app:fb_textSize="@dimen/text_size_10"
                app:fb_radius="3dp"/>

            <TextView
                android:id="@+id/id_hai_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_hai_name"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_95"
                android:textSize="@dimen/text_size_13" />
        </RelativeLayout>

        <View
            android:id="@+id/id_hai_bottom_line"
            style="@style/VerticalHalvingLine_1"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/id_hai_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@mipmap/address_edit" />
    </LinearLayout>

    <View
        style="@style/HorizontalHalvingLine_1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />
</LinearLayout>
