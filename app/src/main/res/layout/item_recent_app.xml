        <RelativeLayout
            style="@style/ClassifyTopItemRL"
            android:layout_gravity="center_vertical"
            android:visibility="invisible">

            <ImageView style="@style/ClassifyTopItemImageView" />

            <TextView
                style="@style/ClassifyTopItemTextView"
                android:text="——" />

            <ImageView style="@style/ClassifyTopItemImageViewRight" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/ClassifyTopItemRL"
            android:layout_gravity="center_vertical"
            android:visibility="invisible">

            <ImageView style="@style/ClassifyTopItemImageView" />

            <TextView
                style="@style/ClassifyTopItemTextView"
                android:text="——" />

            <ImageView style="@style/ClassifyTopItemImageViewRight" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>