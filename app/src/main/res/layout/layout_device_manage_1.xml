<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_layout_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f1f2f6"
    android:orientation="vertical"
    android:visibility="gone">

    <TextView
        android:id="@+id/id_bind_device"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:drawableLeft="@mipmap/ic_bind_device"
        android:drawablePadding="15dp"
        android:drawableRight="@mipmap/ic_right_arrow"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="绑定设备"
        android:textColor="#FF444444"
        android:textSize="@dimen/text_size_17" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <View style="@style/line_1px" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_apply_custody"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:drawableLeft="@mipmap/ic_apply_custody"
        android:drawablePadding="15dp"
        android:drawableRight="@mipmap/ic_right_arrow"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="申请监护"
        android:textColor="#FF444444"
        android:textSize="@dimen/text_size_17"
        android:visibility="gone"/>

</LinearLayout>