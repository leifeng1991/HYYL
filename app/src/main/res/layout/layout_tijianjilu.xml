<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout style="@style/PBLinearLayoutWeightLeft">

            <LinearLayout style="@style/PBLinearLayout">

                <TextView
                    android:id="@+id/tv_weight"
                    style="@style/PBTextLeft"
                    android:text="999" />

                <ImageView
                    android:id="@+id/iv_weight"
                    style="@style/PBImage" />

                <TextView
                    style="@style/PBTextRight"
                    android:text="体重/Kg" />
            </LinearLayout>

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/pb_weight"
                style="@style/PBProgressBar"
                app:rcBackgroundColor="@color/green_e5f5d8"
                app:rcProgressColor="@color/green_acec74" />

        </LinearLayout>

        <LinearLayout style="@style/PBLinearLayoutWeightRight">

            <LinearLayout style="@style/PBLinearLayout">

                <TextView
                    android:id="@+id/tv_cholesterol"
                    style="@style/PBTextLeft"
                    android:text="95" />

                <ImageView
                    android:id="@+id/iv_cholesterol"
                    style="@style/PBImage" />

                <TextView
                    style="@style/PBTextRight"
                    android:text="胆固醇/mmol/L" />
            </LinearLayout>

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/pb_cholesterol"
                style="@style/PBProgressBar"
                app:rcBackgroundColor="#dfeeff"
                app:rcProgressColor="#9fcbff" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <LinearLayout style="@style/PBLinearLayoutWeightLeft">

            <LinearLayout style="@style/PBLinearLayout">

                <TextView
                    android:id="@+id/tv_high_pressure"
                    style="@style/PBTextLeft"
                    android:text="95" />

                <ImageView
                    android:id="@+id/iv_high_pressure"
                    style="@style/PBImage" />

                <TextView
                    style="@style/PBTextRight"
                    android:text="高压/mmHg" />
            </LinearLayout>

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/pb_high_pressure"
                style="@style/PBProgressBar"
                app:rcBackgroundColor="#ffe2e9"
                app:rcProgressColor="#ff8ca8" />

        </LinearLayout>

        <LinearLayout style="@style/PBLinearLayoutWeightRight">

            <LinearLayout style="@style/PBLinearLayout">

                <TextView
                    android:id="@+id/tv_blood_glucose"
                    style="@style/PBTextLeft"
                    android:text="95" />

                <ImageView
                    android:id="@+id/iv_blood_glucose"
                    style="@style/PBImage" />

                <TextView
                    style="@style/PBTextRight"
                    android:text="血糖/mmol/L" />
            </LinearLayout>

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/pb_blood_glucose"
                style="@style/PBProgressBar"
                app:rcBackgroundColor="#ffefc6"
                app:rcProgressColor="#ffd876" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp">

        <LinearLayout style="@style/PBLinearLayoutWeightLeft">

            <LinearLayout style="@style/PBLinearLayout">

                <TextView
                    android:id="@+id/tv_low_pressure"
                    style="@style/PBTextLeft"
                    android:text="95" />

                <ImageView
                    android:id="@+id/iv_low_pressure"
                    style="@style/PBImage" />

                <TextView
                    android:id="@+id/textView"
                    style="@style/PBTextRight"
                    android:text="低压/mmHg" />
            </LinearLayout>

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/pb_low_pressure"
                style="@style/PBProgressBar"
                app:rcBackgroundColor="#fbe2ff"
                app:rcProgressColor="#ed94ff" />

        </LinearLayout>

        <LinearLayout style="@style/PBLinearLayoutWeightRight">

            <LinearLayout style="@style/PBLinearLayout">

                <TextView
                    android:id="@+id/tv_heart_rate"
                    style="@style/PBTextLeft"
                    android:text="95" />

                <ImageView
                    android:id="@+id/iv_heart_rate"
                    style="@style/PBImage" />

                <TextView
                    style="@style/PBTextRight"
                    android:text="心率/次/分" />
            </LinearLayout>

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/pb_heart_rate"
                style="@style/PBProgressBar"
                app:rcBackgroundColor="#fde3e3"
                app:rcProgressColor="#f59898" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>