<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white_f5f6f8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_state_des"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_state_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:src="@mipmap/ic_order_des_dfk" />

                <TextView
                    android:id="@+id/tv_state_des"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:text="等待买家付款"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_orderId"
                    style="@style/tvOrderDesTitle"
                    android:layout_marginTop="10dp"
                    android:text="订单编号：- -" />

                <TextView
                    android:id="@+id/tv_addTime"
                    style="@style/tv_12sp_959595"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="下单时间：- -" />

                <View style="@style/lineHorizontalOrder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_address_name"
                        style="@style/tv_14sp_3a3a3a"
                        android:text="- -" />

                    <TextView
                        android:id="@+id/tv_address_phone"
                        style="@style/tv_14sp_3a3a3a"
                        android:layout_marginLeft="41dp"
                        android:text="- -" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_address_address"
                    style="@style/tv_12sp_959595"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="- -" />

            </LinearLayout>

            <View style="@style/lineHorizontal5dp_f5f6f8" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/lineHorizontal5dp_f5f6f8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        style="@style/tvOrderDesTitle"
                        android:text="服务类型" />

                    <TextView
                        android:id="@+id/tv_server_type"
                        style="@style/tvOrderDesTitle"
                        android:layout_alignParentRight="true"
                        android:text="- -" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        style="@style/tvOrderDesTitle"
                        android:text="支付方式" />

                    <TextView
                        android:id="@+id/tv_payment"
                        style="@style/tvOrderDesTitle"
                        android:layout_alignParentRight="true"
                        android:text="- -" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <View style="@style/lineHorizontalOrder" />

                    <TextView
                        style="@style/tvOrderDesTitle"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:text="发票信息" />

                    <TextView
                        style="@style/tv_12sp_959595"
                        android:text="发票抬头：个人" />

                    <TextView
                        style="@style/tv_12sp_959595"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:text="发票内容：明细" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_nanny_maternity_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View style="@style/lineHorizontal5dp_f5f6f8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_nanny_maternity_1"
                        style="@style/tv_15sp_444444"
                        android:text="- -"
                        android:textColor="@color/black_222833" />

                    <TextView
                        android:id="@+id/tv_nanny_maternity_2"
                        style="@style/tv_15sp_444444"
                        android:layout_marginTop="11dp"
                        android:text="- -"
                        android:textColor="@color/black_222833" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp">

                        <TextView
                            android:id="@+id/tv_nanny_maternity_3_title"
                            style="@style/tv_15sp_444444"
                            android:text="- -"
                            android:textColor="@color/black_222833" />

                        <TextView
                            android:id="@+id/tv_nanny_maternity_3"
                            style="@style/tv_15sp_444444"
                            android:text="- -"
                            android:textColor="@color/black_222833" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_nanny_maternity_4"
                        style="@style/tv_15sp_444444"
                        android:layout_marginTop="11dp"
                        android:text="- -"
                        android:textColor="@color/black_222833" />

                </LinearLayout>
            </LinearLayout>

            <View style="@style/lineHorizontal5dp_f5f6f8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/tv_price_title"
                        style="@style/tvOrderDesTitle"
                        android:text="商品总额" />

                    <TextView
                        android:id="@+id/tv_price"
                        style="@style/tv_15sp_ff725c"
                        android:layout_alignParentRight="true"
                        android:text="¥ 0.00" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp">

                    <TextView
                        android:id="@+id/tv_favorable_title"
                        style="@style/tvOrderDesTitle"
                        android:text="优惠" />

                    <TextView
                        android:id="@+id/tv_favorable"
                        style="@style/tv_15sp_ff725c"
                        android:layout_alignParentRight="true"
                        android:text="¥ 0.00" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="11dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/tvOrderDesTitle"
                        android:text="实付金额：" />

                    <TextView
                        android:id="@+id/tv_payment_money"
                        style="@style/tv_15sp_ff725c"
                        android:text="¥ 0.00"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/lineHorizontal5dp_f5f6f8" />

            <LinearLayout
                android:id="@+id/ll_is_edit_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/tvOrderDesTitle"
                    android:layout_marginTop="15dp"
                    android:text="商家修改订单信息" />

                <TextView
                    android:id="@+id/tv_edit_order_new_time"
                    style="@style/tv_14sp_3a3a3a"
                    android:layout_marginTop="6dp"
                    android:text="现服务时间：2017-04-23    10:00" />

                <TextView
                    android:id="@+id/tv_edit_order_raw_time"
                    style="@style/tv_14sp_3a3a3a"
                    android:layout_marginTop="5dp"
                    android:text="原服务时间：2017-03-20    10:00" />

                <TextView
                    android:id="@+id/tv_edit_order_des"
                    style="@style/tv_14sp_3a3a3a"
                    android:layout_marginTop="4dp"
                    android:text="备注：已和用户电话沟通，更换服务时间" />

                <TextView
                    android:id="@+id/tv_edit_order_edit_time"
                    style="@style/tv_12sp_959595"
                    android:layout_marginBottom="21dp"
                    android:layout_marginTop="2dp"
                    android:text="2017-02-20    10:00"
                    android:textColor="@color/black_999999" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <View style="@style/line_bottom_top" />

    <LinearLayout
        android:id="@+id/ll_order_des_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_f2f2f2"
        android:gravity="right"
        android:paddingBottom="11dp"
        android:paddingLeft="18dp"
        android:paddingRight="11dp"
        android:paddingTop="11dp"
        android:visibility="gone">


        <TextView
            android:id="@+id/tv_order_des_btn1"
            style="@style/btnOrderStateList"
            android:layout_marginRight="13dp"
            android:background="@drawable/shape_rectangle_order_orange"
            android:text="退款详情"
            android:textColor="@color/orange_ff725c" />

        <TextView
            android:id="@+id/tv_order_des_btn2"
            style="@style/btnOrderStateList"
            android:layout_marginRight="13dp"
            android:background="@drawable/shape_rectangle_orderdes_orange"
            android:text="同意退款"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>