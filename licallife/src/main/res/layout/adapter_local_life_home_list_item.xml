<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="24dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/id_image"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_222833"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/id_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="@color/text_746f6e"
                android:textSize="@dimen/text_size_12" />

            <LinearLayout
                android:id="@+id/id_lable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5dp">

                <TextView
                    android:id="@+id/id_lable_first"
                    android:layout_width="53dp"
                    android:layout_height="18dp"
                    android:background="@drawable/shape_orange_stroke"
                    android:gravity="center"
                    android:textColor="@color/text_price"
                    android:textSize="@dimen/text_size_10" />

                <TextView
                    android:id="@+id/id_lable_second"
                    android:layout_width="53dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="7.5dp"
                    android:background="@drawable/shape_orange_stroke"
                    android:gravity="center"
                    android:textColor="@color/text_price"
                    android:textSize="@dimen/text_size_10" />

                <TextView
                    android:id="@+id/id_lable_third"
                    android:layout_width="53dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="7.5dp"
                    android:background="@drawable/shape_orange_stroke"
                    android:gravity="center"
                    android:textColor="@color/text_price"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/horizontallLine"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />
</LinearLayout>
