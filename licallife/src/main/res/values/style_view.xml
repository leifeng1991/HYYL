<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NannyAndMaternityMatronTitleItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/selector_pop_color</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="NannyAndMaternityMatronDesItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/orange_ff725c</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="TabButton">
        <item name="android:layout_width">53dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:background">@drawable/shape_rectangle_ff725c</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/orange_ff725c</item>
        <item name="android:textSize">@dimen/text_size_10</item>
    </style>
</resources>
