<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/id_li_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_select_pay" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/id_address_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:singleLine="true"
                    android:text="ssssssssssssssssssssssss"
                    android:textColor="@color/text_4"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/id_address_name_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_address_location"
                    android:layout_marginTop="7dp"
                    android:singleLine="true"
                    android:text="ssssssssss"
                    android:textColor="@color/text_9"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/id_address_default"
                    android:layout_width="28dp"
                    android:layout_height="15dp"
                    android:layout_below="@id/id_address_location"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/id_address_name_phone"
                    android:background="@drawable/shape_orange_corners"
                    android:gravity="center"
                    android:text="默认"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_10" />

            </RelativeLayout>

            <View
                android:id="@+id/id_hai_bottom_line"
                style="@style/verticalLine"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/id_hai_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:src="@mipmap/address_edit"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/horizontallLine"
        android:layout_marginLeft="20dp" />
</LinearLayout>
