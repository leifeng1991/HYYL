<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/id_ali_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/id_ali_image">

            <TextView
                android:id="@+id/id_ali_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/id_ali_ads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_ali_title"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_9c"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/id_ali_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_ali_ads"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_price"
                android:textSize="17.5sp" />

            <TextView
                android:id="@+id/id_ali_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/id_ali_price"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/id_ali_price"
                android:textColor="@color/text_a2"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/id_ali_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/id_ali_price"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_56"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/id_ali_after_sales"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/id_ali_price"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_black_stroke"
                android:gravity="center"
                android:text="申请售后"
                android:textColor="@color/text_9"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        style="@style/horizontallLine"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />
</LinearLayout>
