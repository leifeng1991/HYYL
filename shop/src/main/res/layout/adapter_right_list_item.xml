<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/line_ef">

    <ImageView
        android:id="@+id/id_rli_cb"
        android:layout_width="9dp"
        android:layout_height="11dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:background="@drawable/selector_select_right_bg" />

    <TextView
        android:id="@+id/id_rli_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/id_rli_cb"
        android:textColor="@color/selector_select_color"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/id_rli_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@id/id_lli_more"
        android:textColor="@color/text_7"
        android:textSize="@dimen/text_size_14" />
</RelativeLayout>
