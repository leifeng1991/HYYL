<?xml version="1.0" encoding="utf-8"?>
<com.xxzlkj.shop.weight.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/id_list_itemt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/id_sli_cb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="@null"
            android:button="@drawable/selector_checked_bg"
            android:focusable="false"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/id_sli_cb"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/id_image_layout"
                    android:layout_width="95dp"
                    android:layout_height="95dp">

                    <ImageView
                        android:id="@+id/id_sli_image"
                        android:layout_width="95dp"
                        android:layout_height="95dp" />

                    <ImageView
                        android:id="@+id/id_coverage_image"
                        android:layout_width="95dp"
                        android:layout_height="95dp" />

                    <TextView
                        android:id="@+id/id_image_layout_tv"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:background="#ffffff" />

                    <TextView
                        android:id="@+id/id_sli_tip"
                        android:layout_width="85dp"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="#E6737373"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12.5sp"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/id_image_layout"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/id_sli_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/text_6"
                        android:textSize="@dimen/text_size_15"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/id_sli_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/id_sli_guige"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:maxWidth="200dp"
                            android:textColor="@color/text_9c"
                            android:textSize="@dimen/text_size_14" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/id_sli_detail"
                                android:layout_width="16dp"
                                android:layout_height="18dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:src="@mipmap/sc_bottom" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/id_advance_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.xxzlkj.shop.weight.CustomButton
                            android:layout_width="38dp"
                            android:layout_height="17dp"
                            app:fb_borderColor="#F5A623 "
                            app:fb_borderWidth="1px"
                            app:fb_defaultColor="@color/white"
                            app:fb_radius="9dp"
                            app:fb_text="预售"
                            app:fb_textColor="#F5A623"
                            app:fb_textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/id_advance_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:text="活动结束 1 天发货"
                            android:textColor="#FFF5A623"
                            android:textSize="@dimen/text_size_13" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/id_sli_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_ff725c"
                                android:textSize="@dimen/text_size_17"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/id_sli_prices"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:textColor="@color/text_a2"
                                android:textSize="@dimen/text_size_10"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/id_sli_jian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/sc_reduce" />

                            <TextView
                                android:id="@+id/id_sli_number"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center"
                                android:text="1" />

                            <ImageView
                                android:id="@+id/id_sli_add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/sc_add" />
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/id_sli_line"
                style="@style/horizontallLine"
                android:layout_below="@id/id_image_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/view_slide_delete" />
</com.xxzlkj.shop.weight.SwipeMenuLayout>
