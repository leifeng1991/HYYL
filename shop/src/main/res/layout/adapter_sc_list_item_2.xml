<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/id_sli_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/id_sli_cb"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/shape_gray_fail_radius"
            android:gravity="center"
            android:text="失效"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_10" />

        <ImageView
            android:id="@+id/id_sli_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/id_sli_cb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/id_sli_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_sli_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/id_sli_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_sli_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/id_sli_image"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_sli_guige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:textColor="@color/text_9c"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_sli_layout"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_sli_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_ff725c"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/id_sli_prices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/text_a2"
                    android:textSize="@dimen/text_size_10"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/id_sli_line"
        style="@style/horizontallLine"
        android:layout_below="@id/id_sli_layout_1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/id_sli_same"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/id_sli_line"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_orange_stroke"
        android:gravity="center"
        android:text="找相似"
        android:textColor="@color/text_price"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/id_sli_delete"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_below="@id/id_sli_line"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@id/id_sli_same"
        android:background="@drawable/shape_gray_stroke"
        android:gravity="center"
        android:text="删除商品"
        android:textColor="@color/text_7"
        android:textSize="@dimen/text_size_13" />
</RelativeLayout>
