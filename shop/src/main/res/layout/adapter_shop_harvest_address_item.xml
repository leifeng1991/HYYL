<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/id_shop_default_line"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/text_price" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/id_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:singleLine="true"
                android:textColor="@color/text_3a"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/id_shop_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/id_shop_name"
                android:singleLine="true"
                android:textColor="@color/text_3a"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/id_shop_default_tip"
                android:layout_width="28dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/id_shop_phone"
                android:background="@drawable/shape_orange_corners"
                android:gravity="center"
                android:text="默认"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/id_shop_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_shop_name"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_95"
                android:textSize="@dimen/text_size_13" />
        </RelativeLayout>

        <View
            android:id="@+id/id_shop_bottom_line"
            style="@style/verticalLine"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/id_shop_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@mipmap/address_edit" />
    </LinearLayout>

    <View
        style="@style/horizontallLine"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />
</LinearLayout>
