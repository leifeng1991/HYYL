<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_title_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="29dp">

        <ImageView
            android:id="@+id/id_sht_image"
            android:layout_width="86dp"
            android:layout_height="29dp" />

        <TextView
            android:id="@+id/id_sht_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="12.5sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_sht_time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_fire_hour"
                style="@style/timerText"
                android:text="12" />

            <TextView
                style="@style/timeText"
                android:text="时" />

            <TextView
                android:id="@+id/id_fire_minute"
                style="@style/timerText"
                android:text="12" />

            <TextView
                style="@style/timeText"
                android:text="分" />

            <TextView
                android:id="@+id/id_fire_senconds"
                style="@style/timerText"
                android:text="12" />

            <TextView
                style="@style/timeText"
                android:text="秒" />

            <TextView
                android:id="@+id/id_fire_millisencond"
                style="@style/timerText"
                android:background="@drawable/shape_orange_corners"
                android:text="12" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
