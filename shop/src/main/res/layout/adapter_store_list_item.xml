<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fffffb">

    <CheckBox
        android:id="@+id/id_sli_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:button="@drawable/selector_checked_bg" />

    <RelativeLayout
        android:id="@+id/id_sli_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/id_sli_line"
        android:layout_toRightOf="@id/id_sli_checkbox"
        android:gravity="left">

        <TextView
            android:id="@+id/id_sli_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/id_sli_location_image"
            android:singleLine="true"
            android:textColor="@color/text_3a"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/id_sli_location_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_sli_store_name"
            android:layout_marginLeft="49dp"
            android:layout_toLeftOf="@+id/id_sli_juli"
            android:src="@mipmap/location" />

        <TextView
            android:id="@+id/id_sli_juli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_sli_store_name"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/text_95"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/id_sli_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_sli_store_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_95"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/id_sli_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_sli_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_95"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <View
        android:id="@+id/id_sli_line"
        style="@style/verticalLine"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/id_sli_phone" />

    <ImageView
        android:id="@+id/id_sli_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:src="@mipmap/phone" />

    <View
        style="@style/horizontallLine"
        android:layout_below="@id/id_sli_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" />
</RelativeLayout>
