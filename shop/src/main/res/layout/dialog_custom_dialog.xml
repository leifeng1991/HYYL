<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idcontent"
    android:layout_width="270dp"
    android:layout_height="200dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/shape_white_corners">

        <RelativeLayout
            android:id="@+id/id_cd_content_layout"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/id_cd_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_67"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/id_cd_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/id_cd_cancel"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="72dp"
                android:layout_height="24dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/shape_orange_stroke"
                android:text="取消"
                android:textColor="@color/text_price"
                android:textSize="@dimen/text_size_14" />

            <Button
                android:id="@+id/id_cd_sure"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="72dp"
                android:layout_height="24dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/shape_buy_now"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/id_cd_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
