<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <View style="@style/line_1px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/id_tuangou_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2人团"
            android:textColor="#FF3A3A3A"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/id_tuangou_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="¥63.8"
            android:textColor="#FFFF725C"
            android:textSize="@dimen/text_size_14"
            android:gravity="center_horizontal"/>

        <com.xxzlkj.shop.weight.CustomButton
            android:id="@+id/id_open_mass"
            android:layout_width="50dp"
            android:layout_height="23dp"
            android:background="#FFE6001C"
            app:fb_defaultColor="#FFE6001C"
            app:fb_radius="5dp"
            app:fb_text="开团"
            app:fb_textColor="#FFFFFFFF"
            app:fb_textSize="@dimen/text_size_13"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>