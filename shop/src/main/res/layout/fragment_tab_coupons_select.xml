<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white_f1f2f6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_config">


        <com.xxzlkj.zhaolinshare.base.MyRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_no_coupons_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="15dp"
            android:drawableTop="@mipmap/ic_coupons_no_data"
            android:text="此处没有优惠券"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_config"
        android:layout_width="278dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/shape_buy_now"
        android:text="立即使用"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_17" />
</RelativeLayout>